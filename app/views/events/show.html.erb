<p id="notice"><%= notice %></p>
<div class="flash-alert">
  <% if flash[:alert] %>
  <%= flash[:alert] %>
  <% end %>
</div>

  <!-- Post Content -->
  <article>
      <div class="container">
          <div class="row">
              <div class="col-lg-10" style="margin-left: 6%; text-align: center">
                <h1><%= @event.title %></h1>
                  <p class="review"><%= @event.start_time %></p>
                  <p class="review"><%= @event.description %></p>
                  <p class="review"><%= @event.address %></p>
                  <% if @event.url.present? %>
                    <a href="<%= @event.url %>" class="review url">URL: <%= @event.url.to_s %></a>
                  <% end %>
                  <div class="row">
                    <!-- GOOGLE MAPS -->
                    <div id="event_map" data-event-id="<%=@event.id%>" style="width:600px; height:500px; margin-left: 180px;"></div>
                    <!--END GOOGLE MAPS -->
                  </div>
                  <br>
                  <div class="row">
                    <% if user_signed_in? %>
                      <div class="col-xs-1">
                        <%= button_to 'Edit', edit_event_path(@event), :class => "btn btn-warning", :method => :get %>
                      </div>
                      <div class="col-xs-2">
                      <%= link_to 'Destroy', event_path, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                      </div>
                    <% end %>
                    <div class="col-xs-1">
                      <%= button_to 'Back', '/welcome/calendar', :class => "btn btn-primary", :method => :get  %>
                    </div>

                      <div class="col-sm-10"> <p></p></div>
              </div>
          </div>
      </div>

  </article>


  <!-- jQuery -->
  <script src="vendor/jquery/jquery.min.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="vendor/bootstrap/js/bootstrap.min.js"></script>

  <!-- Contact Form JavaScript -->
  <script src="js/jqBootstrapValidation.js"></script>
  <script src="js/contact_me.js"></script>

  <!-- Theme JavaScript -->
  <script src="js/clean-blog.min.js"></script>
