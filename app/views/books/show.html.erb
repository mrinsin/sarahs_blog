
<!-- Page Header -->
  <!-- Set your background image for this header on the line below. -->
  <div class="flash-alert">
    <% if flash[:alert] %>
    <%= flash[:alert] %>
    <% end %>
  </div>
  <header class="intro-header" style="background-image: url(<%= @book.image.url %>)">
      <div class="container">
          <div class="row">
              <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                  <div class="post-heading">
                      <h1 class="cinzel"><%= @book.title %></h1>
                      <h3 style="text-align: center;"><em><%= @book.created_at.to_s%></em></h3>
                  </div>
              </div>
          </div>
      </div>
  </header>

  <!-- Post Content -->
  <article>
      <div class="container">
          <div class="row">
            <div class="col-lg-10" style="margin-left: 6%;">
                  <p class="review">
                    <%= @book.review %>
                  </p>
                  <% if @book.url.present? %>
                    <p><a href="<%=@book.url%>" class="review url">URL: <%= @event.url.to_s %></a></p>
                  <% end %>
                  <br>
                  <div class="row">
                    <% if user_signed_in? %>
                      <div class="col-xs-1">
                        <%= button_to 'Edit', edit_book_path(@book), :class => "btn btn-warning", :method => :get %>
                      </div>
                      <div class="col-xs-2">
                      <%= link_to 'Destroy', book_path, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                      </div>
                    <% end %>
                    <div class="col-xs-1">
                      <%= button_to 'Back', request.referer, :class => "btn btn-primary", :method => :get  %>
                    <div>
                      <div class="col-sm-10"> <p></p></div>
              </div>
          </div>
      </div>
  </article>


  <!-- jQuery -->
  <script src="vendor/jquery/jquery.min.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="vendor/bootstrap/js/bootstrap.min.js"></script>

  <!-- Contact Form JavaScript -->
  <script src="js/jqBootstrapValidation.js"></script>
  <script src="js/contact_me.js"></script>

  <!-- Theme JavaScript -->
  <script src="js/clean-blog.min.js"></script>
